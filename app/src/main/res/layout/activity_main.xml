<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#ff3177b9">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-.-"
        android:id="@+id/chargeHours"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="48dp"
        android:layout_marginTop="100dp"
        android:textColor="#ffffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hours charged"
        android:id="@+id/textView"
        android:gravity="center"
        android:textSize="24dp"
        android:textColor="#ffffffff"
        android:layout_below="@+id/chargeHours"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-.-"
        android:id="@+id/lastCharged"
        android:gravity="center"
        android:textSize="48dp"
        android:layout_marginTop="20dp"
        android:textColor="#ffffffff"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hours since last charge"
        android:id="@+id/textView3"
        android:gravity="center"
        android:textSize="24dp"
        android:textColor="#ffffffff"
        android:layout_below="@+id/lastCharged"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-.-"
        android:id="@+id/usedKwh"
        android:gravity="center"
        android:textSize="48dp"
        android:layout_marginTop="20dp"
        android:textColor="#ffffffff"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="est. total kwH used"
        android:id="@+id/textView5"
        android:gravity="center"
        android:textSize="24dp"
        android:textColor="#ffffffff"
        android:layout_below="@+id/usedKwh"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="--"
        android:id="@+id/addlCharge"
        android:gravity="center"
        android:textSize="48dp"
        android:layout_marginTop="20dp"
        android:textColor="#ffffffff"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="est. additional charge"
        android:id="@+id/textView7"
        android:gravity="center"
        android:textSize="24dp"
        android:textColor="#ffffffff"
        android:layout_below="@+id/addlCharge"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="%"
        android:id="@+id/textView8"
        android:gravity="center"
        android:textSize="32dp"
        android:textColor="#ffffffff"
        android:layout_alignTop="@+id/addlCharge"
        android:layout_toEndOf="@+id/addlCharge"
        android:layout_above="@+id/textView7" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Leaf Charging Stats"
        android:id="@+id/textView2"
        android:gravity="center"
        android:textSize="24dp"
        android:textColor="#333"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:background="#fff"
        android:elevation="8dp" />


</RelativeLayout>
